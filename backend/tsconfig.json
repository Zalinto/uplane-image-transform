{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // ADD THIS - helps with module imports
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": true, // ADD THIS - warns about unused variables
    "noUnusedParameters": true, // ADD THIS - warns about unused parameters
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true, // ADD THIS - allows importing JSON files
    "isolatedModules": true // ADD THIS - helps with some compilation issues
  },
  "include": ["src/**/*"], // ADD THIS - explicitly include src files
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"] // ADD THIS - exclude unnecessary files
}
